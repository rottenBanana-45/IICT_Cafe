<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsRechargeActivities.RechargeActivity">

    <include layout="@layout/toolbar" android:id="@+id/recharge_toolbar" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recharge_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <RelativeLayout
        android:id="@+id/loading_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qr"
        android:layout_marginTop="30dp">

        <ProgressBar
            android:id="@+id/progress_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/progress_uid"
            android:layout_toRightOf="@+id/progress_uid"
            android:text="@string/loading_balance"
            android:textSize="16sp"
            android:layout_marginStart="5dp" />

    </RelativeLayout>



</RelativeLayout>