<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterLoginActivity.CartActivity">

    <include layout="@layout/toolbar" android:id="@+id/cart_toolbar" />

        <RelativeLayout
            android:id="@+id/ricelayout"
            android:layout_below="@+id/cart_toolbar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="231dp"
                android:text="@string/rice_20_bdt"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:textSize="19.45sp" />

            <TextView
                android:id="@+id/rice_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="140dp"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

            <Button
                android:id="@+id/rice_sub_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:background="@color/colorPrimary"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rice_add_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chickenlayout"
            android:layout_below="@+id/ricelayout"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="237dp"

                android:text="@string/chicken_curry_n_40_bdt"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19.45sp" />


            <TextView
                android:id="@+id/chicken_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="140dp"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/chicken_sub_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorPrimary"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/chicken_add_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/puddinglayout"
            android:layout_below="@+id/chickenlayout"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="229dp"
                android:text="@string/pudding_n_20_bdt"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19.45sp" />

            <TextView
                android:id="@+id/pudding_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="140dp"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/pudding_sub_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pudding_add_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eggcurrylayout"
            android:layout_below="@+id/puddinglayout"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="231dp"
                android:text="@string/egg_curry_20_bdt"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19.80sp" />

            <TextView
                android:id="@+id/eggcurry_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="140dp"
                android:text="@string/zero"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/eggcurry_sub_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:text="@string/minus"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eggcurry_add_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lentillayout"
            android:layout_below="@+id/eggcurrylayout"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="230dp"
                android:layout_centerVertical="true"
                android:text="@string/lentil_20_bdt"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19.45sp" />

            <TextView
                android:id="@+id/lentil_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="140dp"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

            <Button
                android:id="@+id/lentil_sub_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="70dp"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/lentil_add_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/khichurilayout"
            android:layout_below="@+id/lentillayout"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="231dp"
                android:text="@string/khichuri_25_bdt"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19.45sp" />

            <TextView
                android:id="@+id/khichuri_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="140dp"
                android:layout_centerVertical="true"
                android:text="@string/zero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/khichuri_sub_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:layout_centerVertical="true"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/khichuri_add_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textSize="20sp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/khichurilayout">

        <TextView
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:text="@string/table_no"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/tableno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/table"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:textSize="20sp"/>

    </RelativeLayout>

        <Button
            android:id="@+id/proceed_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="18dp"
            android:background="@color/colorPrimary"
            android:text="@string/proceed"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/total_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="90dp"
            android:textStyle="bold"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/total_show_view"
            android:layout_width="89dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="90dp"
            android:text="@string/total"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="79dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="90dp"
            android:textStyle="bold"
            android:text="@string/bdt"
            android:textAlignment="center"
            android:textSize="20sp" />


</RelativeLayout>