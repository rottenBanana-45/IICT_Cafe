<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterLoginActivity.LoggedinHomeActivity">
    
    <RelativeLayout
        android:id="@+id/nameFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/userNameView"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/progress_name"
            android:textSize="25sp"
            android:layout_toEndOf="@id/progress_name"
            android:layout_marginStart="5dp"
            android:text="@string/loading"
            android:layout_marginLeft="5dp" />
        
        <ProgressBar
            android:id="@+id/progress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>

    

    <TextView
        android:id="@+id/userIDView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/balanceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/changeDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="160dp"
        android:text="@string/change_display_name" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="160dp"
        android:text="@string/log_out" />

</RelativeLayout>